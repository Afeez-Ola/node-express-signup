<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <%- include('./partials/message.ejs'); %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email"><i class="fas fa-envelope" style= "color: rgba(30, 134, 238, 0.938);"  ></i></label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password"><i class="fas fa-lock" style= "color: rgba(30, 134, 238, 0.938);"></i></label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <button type="button" class="btn btn-link"><a href="/users/register"><h4>Register</h4></a></button>
      </p>
    </div>
  </div>
</div>